<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login_google_button"
            android:layout_width="fill_parent"
            android:layout_height="40dp"

            android:layout_marginBottom="10dp"
            android:text="@string/google_login_text"
            android:textColor="@color/white"
            android:background="@drawable/button_google_all_rounded"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-light"
            android:layout_margin="5dp" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login_fb_button"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:text="@string/fb_login_text"
            android:background="@drawable/button_facebook_all_rounded"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center"
            android:layout_margin="5dp"

            />

        <include
            layout="@layout/view_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>