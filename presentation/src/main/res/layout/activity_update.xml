<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_shadowed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <!-- placeholder, empty except on L -->

    </LinearLayout>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/viewA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@color/gray"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/update_indicator"

                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/fuel_price_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3">

                <include
                    android:id="@+id/address_view"
                    layout="@layout/address_view" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:layout_below="@+id/address_view">

                    <RelativeLayout
                        android:id="@+id/fuel95holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fuel92holder"
                        android:paddingLeft="48dp"
                        android:paddingRight="48dp"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp">

                        <TextView
                            android:id="@+id/fuel95"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center_vertical"
                            android:text="@string/update_blyfri_95"
                            android:textColor="@color/app_green"
                            android:textSize="18sp"
                            android:layout_marginRight="2dp"
                            android:textAllCaps="true"
                            android:textStyle = "bold"
                            />

                        <EditText
                            android:id="@+id/fuelInput95"
                            android:inputType="number"
                            android:digits="0123456789 -."
                            android:imeOptions="actionNext"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/app_green"
                            android:layout_marginLeft="2dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fuelDieselholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fuel95holder"
                        android:paddingLeft="48dp"
                        android:paddingRight="48dp"

                        android:orientation="horizontal"
                        android:paddingBottom="6dp">

                        <TextView
                            android:id="@+id/fuelDiesel"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center_vertical"
                            android:text="@string/update_diesel"
                            android:textColor="@color/app_green"
                            android:textSize="18sp"
                            android:layout_marginRight="2dp"
                            android:textAllCaps="true"
                            android:textStyle = "bold"/>

                        <EditText
                            android:id="@+id/fuelInputDiesel"
                            android:inputType="number"
                            android:digits="0123456789 -."
                            android:imeOptions="actionNext"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/app_green" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fuel92holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="48dp"
                        android:paddingRight="48dp"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="60dp">


                        <TextView
                            android:id="@+id/fuel92"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:text="@string/update_blyfri_92"
                            android:textColor="@color/app_green"
                            android:textSize="18sp"
                            android:layout_marginRight="2dp"
                            android:textAllCaps="true"
                            android:fontFamily="sans-serif-light"
                            android:textStyle = "bold"/>

                        <EditText
                            android:id="@+id/fuelInput92"
                            android:inputType="number"
                            android:digits="0123456789 -."
                            android:imeOptions="actionNext"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/app_green"
                            android:background="@color/white"
                            android:layout_marginLeft="2dp" />


                    </RelativeLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/white"
                        android:background="@drawable/button_green_right_rounded"
                        android:id="@+id/button2"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />


                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/openCameraBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:backgroundTint="@color/app_green"
            android:clickable="true"
            android:src="@drawable/ic_camcorder_24dp"
            app:layout_anchor="@id/viewA"
            app:layout_anchorGravity="bottom|right|end" />
    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>