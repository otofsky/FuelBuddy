<LinearLayout android:gravity="top"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_width="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <CheckBox
                android:gravity="center_vertical"
                android:id="@+id/fuel_checkbox"
                android:layout_gravity="left"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50.0dip"
                android:layout_width="145.0dip"
                android:text="Natural 95"
                android:textSize="16.0dip"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                />

            <LinearLayout
                android:id="@+id/pump_price_canvas"
                android:layout_gravity="top"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:layout_width="120.0dip"
                android:orientation="vertical"
                android:paddingLeft="5.0dip"
                android:paddingRight="8.0dip">

                <TextView
                    android:gravity="center"
                    android:id="@+id/pump_price_date"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:paddingBottom="0.0dip"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textStyle="normal" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/pump_price"
                    android:includeFontPadding="false"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:padding="0.0dip"
                    android:shadowColor="@color/app_green"
                    android:text="--.--"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/app_green"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seekbar_panel"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="10.0">

            <ImageButton
                android:id="@+id/btn_minus"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:background="@drawable/button_green_all_rounded"
                android:padding="15.0dip"
                android:src="@mipmap/ic_suggestions_remove" />

            <SeekBar
                android:gravity="center"
                android:id="@+id/pump_price_seekbar"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="12.0dip"
                android:layout_weight="8.0"
                android:layout_width="fill_parent" />

            <ImageButton
                android:id="@+id/btn_plus"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:padding="15.0dip"
                android:background="@drawable/button_green_all_rounded"
                android:src="@mipmap/ic_suggestions_add" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>